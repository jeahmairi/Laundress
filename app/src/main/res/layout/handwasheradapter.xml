<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/handwasherpic"
            android:layout_width="167dp"
            android:layout_height="154dp"
            app:srcCompat="@drawable/handwasher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hwname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Handwaher's Name"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/hwcont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Contact Number" />

            <TextView
                android:id="@+id/hwmeters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Meters Away" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/favorites"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@android:color/background_light"
                    app:srcCompat="@drawable/ic_stars_black_24dp"
                    tools:ignore="VectorDrawableCompat" />

                <Button
                    android:id="@+id/btnchoose"
                    android:layout_width="106dp"
                    android:layout_height="40dp"
                    android:background="@color/green"
                    android:text="Choose"
                    android:textColor="@android:color/background_light" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>