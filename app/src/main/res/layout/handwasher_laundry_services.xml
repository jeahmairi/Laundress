<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="Service Type"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/pickupdeliv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/servicetype_pickupdeliv" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/homeservice"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/servicetype_homeservice" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView36"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="Services Offered"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <CheckBox
            android:id="@+id/laundry"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="@string/chb_servoff_laund" />

        <EditText
            android:id="@+id/pricelaundry"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:hint="Price"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/unitofmeasurelaundry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:entries="@array/unitofmeasure" />

    </LinearLayout>

        <TextView
            android:id="@+id/textView37"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="Extra Services"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp">

            <CheckBox
                android:id="@+id/iron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chb_extra_iron" />

            <EditText
                android:id="@+id/priceironing"
                android:layout_width="67dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:hint="Price"
                android:inputType="numberDecimal" />

            <Spinner
                android:id="@+id/unitofmeasureiron"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:entries="@array/unitofmeasureadd" />
        </LinearLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

            <CheckBox
                android:id="@+id/fold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chb_extra_fold" />

            <EditText
                android:id="@+id/pricefolding"
                android:layout_width="62dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:ems="10"
                android:hint="Price"
                android:inputType="numberDecimal" />

            <Spinner
                android:id="@+id/unitofmeasurefold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:entries="@array/unitofmeasureadd" />
        </LinearLayout>

        <Button
            android:id="@+id/btnset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/darkBlue"
            android:text="Set Services"
            android:textColor="@android:color/background_light" />
    </LinearLayout>
</ScrollView>